<%- model_class = Micropost.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:spotify) %></th>
      <th><%= model_class.human_attribute_name(:itunes) %></th>
      <th><%= model_class.human_attribute_name(:link_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= link_to micropost.id, micropost_path(micropost) %></td>
        <td><%= micropost.name %></td>
        <td><%= micropost.spotify %></td>
        <td><%= micropost.itunes %></td>
        <td><%= micropost.link_url %></td>
        <td><%=l micropost.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_micropost_path(micropost), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      micropost_path(micropost),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_micropost_path,
            :class => 'btn btn-primary' %>
